#!/bin/bash

LANG=C

SCRIPTFILE="$0"
if ! [ -L "$SCRIPTFILE" ]; then
 BINPATH="$(cd $(dirname "$SCRIPTFILE"); pwd)"
else
 BINPATH="$(cd $(dirname "$(readlink "$SCRIPTFILE")"); pwd)"
fi
export BINPATH

export PYTHONPATH=$BINPATH/../libs

if [ -x "$(which python26 2>/dev/null)" ]; then
  PYTHON=$(which python26)
else
  PYTHON=$(which python)
fi

PYVERGT260=$($PYTHON -c "import sys; print sys.hexversion >= 0x2060000")

if [ $PYVERGT260 == "True" ]; then
  exec $PYTHON "$BINPATH/../hwswa2/main.py" "$@"
else
  echo "Check your python version, it should be >= 2.6.0"
fi
